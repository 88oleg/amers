		content
			.catalog-page
				mixin item (name, img, category, short, price)
					.col-md-4.catalog-item
						a(href="item-card-old.html")
							h3= name
						.image-holder
							img(src= img, alt= name).fake-img
							.img(style="background-image:url(#{img})")
							.hover
								a(href="item-card-old.html" tabindex="-1").go-to-item
									span.glyphicon.glyphicon-eye-open
								a(href="cart.html" data-toggle="modal" data-target="#cart-sidebar" tabindex="-1").go-to-cart
									span.glyphicon.glyphicon-plus
						.catalog-item-description
							a(href="catalog.html" tabindex="-1")
								h4= category
							h3= name
							p!= 'цена от <b>' + price + '</b> <small>грн</small>'
							//- p= short
							//- .buttons-holder
								a(href="item-card-old.html" tabindex="-1").btn.btn-grey Подробней
								a(href="item-card-old.html" tabindex="-1").btn.btn-primary Купить

