doctype html
html(lang='ru')
	head
		title AMERS - профиль
		meta(charset="utf-8")

		include ./partials/head.jade

	body

		include ./partials/noscript.jade
		include ./partials/navigation.jade

		content.user-actions-page
			.container
				.row
					.col-md-12
						ul.user-actions-list
							li.action-link.col-sm-12.col-md-4
								a(href="#cart-tab" aria-controls="cart-tab" role="tab" data-toggle="tab")
									i.icon-basket
									span Посмотреть корзину
							li.action-link.col-sm-12.col-md-4
								a(href="#purchase-history-tab" aria-controls="purchase-history-tab" role="tab" data-toggle="tab")
									i.icon-history
									span История покупок
							li.action-link.col-sm-12.col-md-4
								a(href="#profile-tab" aria-controls="profile-tab" role="tab" data-toggle="tab")
									i.icon-vcard
									span Изменить профиль
				.row
					.col-md-12
						.tab-content.user-actions-content
							#cart-tab.tab-pane.active( role="tabpanel" )
								include partials/cart-items

							#purchase-history-tab.tab-pane( role="tabpanel" )
								.cart-items-holder
									mixin cart-item (name, img, status, ...prop)
										li.cart-item(class= 'status-' + status)
											.left-side
												span.item-image
													a.image-holder(href='item-card.html')
														img(src= img, alt= name)
												a.item-name(href='item-card.html')= name
											.right-side
												span.item-properties
													-for (key in prop)
														button= prop[key]
												span.item-status
													button
														if status === 'done'
															| доставлено
														else if status === 'waiting'
															| доставляется
														else
															| отменено
												span.item-price
													span.price-cost 12700
													span.currency грн.
									+cart-item(
										'Сенатор',
										'https://www.pufetto.com.ua/items/gerardo/c/1/c.gerardo.jpg',
										'done',
										'Красный',
										'PENTA'
									)
									+cart-item(
										'Милана',
										'http://amers.ck.ua/upload/Milana.jpg',
										'done',
										'Синий',
										'NOVEL'
									)
									+cart-item(
										'Доната',
										'http://amers.ck.ua/upload/Donata_divan.jpg',
										'waiting',
										'Желтый',
										'RITZ'
									)
									+cart-item(
										'Сенатор',
										'http://amers.ck.ua/upload/Senator_1.jpg',
										'canceled',
										'Красный',
										'TRINITY'
									)

							#profile-tab.tab-pane( role="tabpanel" )
								.profile-form(action="#")
									.form-group
										label(for="popup-register-email") Email *
										input(type="text" value="test@mail.ua")#popup-register-email
									.form-group
										label(for="popup-register-email") ФИО
										input(type="text" value="Андреевич Андрей Андреев")#popup-register-email
									.form-group
										label(for="popup-register-email") Номер телефона
										input(type="text" value="(033) 123-45-67")#popup-register-email
									.form-group
										label(for="popup-register-password") Старый пароль *
										input(type="password")#popup-register-password
									.form-group
										label(for="popup-register-password") Пароль повторно *
										input(type="password")#popup-register-password
									.button-group
										button.btn.btn-primary(type="submit")
											span Сохранить

		include ./partials/footer.jade
		include ./partials/modals.jade

	include ./partials/scripts.jade
