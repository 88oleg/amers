#search-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
	.modal-dialog.modal-lg
		.modal-content
			.container
				button.close(type='button', data-dismiss='modal', aria-label='Close')
				.row
					//- h2 Поиск
					form(action="#").col-md-12.search-wrapper
						.input-form.search-main-input-group
							input(type="text" placeholder="Поиск по сайту")
							input(type="submit" value="")
						ul.tag-cloud-1
							li
								a.btn.btn-primary(href="#")
									span Модульные диваны
							li
								a.btn.btn-primary(href="#")
									span Угловые диваны
							li
								a.btn.btn-primary(href="#")
									span Прямые диваны
						.search-main-results-holder
							mixin result (name, type, description, image)
								.search-result
									h3= name
									h4= type
									if image
										img(src= image, alt= name)
									p= description


#login-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
	.modal-dialog.modal-lg
		.modal-content
			.container-fluid
				button.close(type='button', data-dismiss='modal', aria-label='Close')
				.row
					form(action="#").col-md-12.profile-form
						.form-group
							label(for="popup-login-email") Email
							input(type="text")#popup-login-email
						.form-group
							label(for="popup-login-password") Пароль
							input(type="password")#popup-login-password
							a(href="password-recovery.html" data-toggle="modal" data-target="#forgot-modal").forgot-password Забыли?
						.form-group.checkbox-group
							input(type="checkbox")#popup-login-save
							label(for="popup-login-save") Сохранить
						.button-group
							a.btn.btn-primary(type="submit" href="user-actions.html")
								span Вход
							a.btn.btn-under(href="signup.html" data-toggle="modal" data-target="#register-modal")
								span Регистрация


